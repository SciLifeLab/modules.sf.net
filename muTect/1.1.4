#%Module1.0#####################################################################
##
## mutect modulefile
##

source $env(MODULE_INCLUDE)/functions.tcl
getCluster

set components [ file split [ module-info name ] ]
set version [ lindex $components 1 ]

set     modroot          /proj/a2010002/nobackup/sw/mf/bioinfo-tools/mutect

proc ModulesHelp { } {
        global version modroot

        puts stderr "\tmuTect - use muTect $version"
        puts stderr "\n\tVersion $version\n"
}

module-whatis   "Loads muTect environment."

# Only one version at a time
conflict muTect

#Log loading to syslog
logToSyslog

# Directories for the program:
#
prepend-path    PATH            $modroot
#prepend-path    CLASSPATH       $modroot

# Environments for the program:
#
setenv               MUTECT_HOME      $modroot
