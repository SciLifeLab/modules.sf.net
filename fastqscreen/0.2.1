#%Module1.0
#
# fastqscreen modulefile
#
set version [file tail [module-info name]]
set name [file dirname [module-info name]]

set modroot /proj/a2010002/nobackup/sw/mf/bioinfo-tools/misc/fastqscreen/$version
set perllib /proj/a2010002/nobackup/sw/mf/bioinfo-tools/misc/fastqscreen/perl5/lib/perl5

if [module-info mode display] {
	puts stderr "\t$name-$version\n"
}

if [module-info mode load] {
    prepend-path    PATH            $modroot
    prepend-path    PERL5LIB        $perllib
}

if [module-info mode remove] {
    remove-path     PATH            $modroot
    remove-path     PERL5LIB        $perllib
}

module-whatis   "fastqscreen"
